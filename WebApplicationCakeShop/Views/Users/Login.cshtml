@model WebApplicationCakeShop.Models.User

@{
    ViewData["Title"] = "Login";

}

<h1 class="font-weight-lighter text-light">Login</h1>

<hr />
@*<video src="~/video/pexels-artem-podrez-6824077.mp4"> muted loop autoplay></video>*@


<div class="wrapper text-dark">
    <div style="margin-left" class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <i class="fa fa-user"></i>
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-lock"></i>
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <!--Prevents duplication of users-->
        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error</div>
        }

        <video width="400" height="400" autoplay loop muted src="~/video/pexels-artem-podrez-6824077.mp4"></video>
    </div>
</div>

<p class="nameStyle">
    Not Registered Yet? <a asp-action="Register">Click Here</a> to register
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
