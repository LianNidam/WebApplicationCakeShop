@{ ViewData["Title"] = "Milky Cakes"; }
@model IEnumerable<WebApplicationCakeShop.Models.Cake>

<h1 class="font-weight-bolder">קטגוריית חלבי </h1>
<div class="card-group">
    <div class="row cardgrouprow">
        @foreach (var item in Model)
        {
<div class="col-sm collumn" style="">
    <div class="card btn-outline-light btn-group-vertical">
        <a class="asp-style-card" asp-controller="Cakes" asp-action="Details" asp-route-id="@item.Id">
            <clickable>
                <img src=@item.PhotosUrl1 class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                </div>
            </clickable>
        </a>

        <div class="card-footer">
            <h6 class="text-muted">Price - @item.Price ₪</h6>
