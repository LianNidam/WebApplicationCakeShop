@{ ViewData["Title"] = "WithoutBaking Cakes"; }
@model IEnumerable<WebApplicationCakeShop.Models.Cake>

<head>
    <div class="text-center">

        <h1 style="width:1242px; height:80px" class="display-4 ">עוגות ללא אפייה</h1>
    </div>
</head>


<div class="card-group">
    <div class="row cardgrouprow">
        @foreach (var item in Model)
        {
            <div class="col-sm collumn">
                <div class="card btn-outline-light btn-width">
                    <a class="asp-style-card" asp-controller="Cakes" asp-action="Details" asp-route-id="@item.Id">
                        <clickable>
                            <img src=@item.PhotosUrl1 class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                            </div>
                        </clickable>
                    </a>
                    <div class="card-footer">
                        <h6 class="text-muted">Price - @item.Price ₪</h6>
                        <form asp-controller="Carts" asp-action="AddToCart" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-light btn-sm card-background">
                                Add To Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>}
    </div>
</div>