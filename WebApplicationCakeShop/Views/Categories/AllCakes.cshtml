@{
    ViewData["Title"] = "All Cakes";
}

@model IEnumerable<WebApplicationCakeShop.Models.Cake>

<head>
    <div class="text-center">

        <h1 style="width:1242px; height:80px" class="display-4 ">כל העוגות</h1>
    </div>
</head>

<form asp-action="GroupByPrice" method="post">
    @*<button asp-type="submit" class="btn-light groupby" id="groupby">
        Price from low to high
    </button>*@
</form>
<div class="card-group">
    @*row cardgrouprow*@
    <div class="row card-columns">
        @foreach (var item in Model)
        {
            <div class="col-md-2">
                <div style="position:relative; width:300px; height:350px;" class="card btn-outline-light btn-width">
                    <a class="asp-style-card" asp-controller="Cakes" asp-action="Details" asp-route-id="@item.Id">
                        <clickable>
                            <img src=@item.PhotosUrl1 class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">@item.Category</h5>
                            </div>
                        </clickable>
                    </a>
                    <div class="card-footer">
                        <h6 class="text-muted">Price - @item.Price ₪</h6>
                        <form asp-controller="Carts" asp-action="AddToCart" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-light btn-sm card-background">
                                Add To Cart
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
